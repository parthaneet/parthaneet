                     <li>
                      <input
                        type="radio"
                        id={`option_${question.question_id}_0`}
                        name={`question_${question.question_id}`}
                        checked={selectedOptions[question.question_id] === 0}
                        onChange={() => handleOptionSelect(question.question_id, 0)}
                      />
                      <label htmlFor={`option_${question.question_id}_0`}>{question.option_1}</label>
                    </li>
                    <li>
                      <input
                        type="radio"
